{
  "name": "canvas-hw-reminder",
  "productName": "Canvas HW Reminder",
  "version": "0.9.0-beta.2",
  "description": "Canvas HW Reminder",
  "author": "Clartik",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Clartik/CanvasHWReminder.git"
  },
  "main": "./build/main/main.js",
  "scripts": {
    "watch": "npx tsc -w",
    "lint": "eslint",
    "build": "npx tsc",

    "start": "npm run build && cross-env NODE_ENV=dev electron .",
    "start:prod": "npm run build && cross-env NODE_ENV=prod electron .",

    "make": "npm run build && npm run lint && cross-env NODE_ENV=prod electron-builder"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.12.0",
    "@types/node-fetch": "^2.6.11",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.8.1"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "node-fetch": "^2.6.1"
  },
  "build": {
    "appId": "com.clartik.canvashwreminder",
    "files": [
      "./build/**/*",
      "./pages/**/*",
      "./assets/**/*"
    ],
    "directories": {
      "output": "dist/v${version}/${os}-${arch}"
    },
    "generateUpdatesFilesForAllChannels": true,
    "win": {
      "extraResources": [
        {
          "from": "./assets/images/icon.ico",
          "to": "icon.ico"
        },
        {
          "from": "./assets/images/bell.png",
          "to": "bell.png"
        },
        {
          "from": "./assets/images/bell-slash.png",
          "to": "bell-slash.png"
        },
        ".env.prod"
      ],
      "artifactName": "Canvas-HW-Reminder-Setup.${ext}",
      "icon": "./assets/images/icon.ico",
      "publish": [
        {
          "provider": "s3",
          "bucket": "canvas-hw-reminder"
        }
      ]
    },
    "nsis": {
      "installerIcon": "./assets/images/icon.ico",
      "artifactName": "Canvas-HW-Reminder-Setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
